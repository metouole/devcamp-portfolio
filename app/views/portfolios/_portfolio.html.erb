<div class="col-md-4" >
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio.id %>">
    

    <%= image_tag portfolio.thumb_image, class: 'bd-placeholder-img card-img-top' %><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= link_to portfolio.title, portfolio_show_path(portfolio.id) %></text>
    <div class="card-body">
     <!-- <p class="card-text"><%= portfolio.body %></p>-->
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
        	<% if logged_in?(:site_admin) %>
        		<%= link_to "Edit", edit_portfolio_path(portfolio.id), class: 'btn btn-sm btn-outline-secondary'  %>
       			<%= link_to "Supprimer", portfolio_path(portfolio.id), method: :delete, data: { confirm: "Are You sure?"}, class: 'btn btn-sm btn-outline-secondary' %>
          	<% end %>
        </div>
        <small class="text-muted"><%=  distance_of_time_in_words(portfolio.created_at, Time.now) %> ago</small>
      </div>
    </div>
  </div>
</div>
