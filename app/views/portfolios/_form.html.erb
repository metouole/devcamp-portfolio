<div class="card ">
  <div class="card-body">
    <h5 class="card-title">Portfolio Form</h5>
    <p class="card-text">
      <%= form_with(model: portfolio_item, local: true) do |form| %>
      <div class="row"> 
       <div class="col-md-6">
         <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>

           <div class="form-group">
            <%= form.label :subtitle %>
            <%= form.text_field :subtitle, class: "form-control" %>
          </div>

          <div class="form-group">
            <label class="btn btn-primary">
              Upload a main image<%= form.file_field :main_image, style: 'display: none;' %>
            </label>
          </div>

          <div class="form-group">
            <label class="btn btn-primary">
              Upload a thumb image<%= form.file_field :thumb_image, style: 'display: none;' %>
            </label>
          </div>
       </div> 
        
       <div class="col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class: "form-control", rows: 10 %>
        </div>
      </div>
      </div>
      
        <div class="form-group">
          <h5 class="card-title">Technologies</h5>

            <%= form.fields_for :technologies do |technology_form| %>
                    <%= render 'technology_fields', f: technology_form %>
              <% end %>
            <p class="card-text">
              <%= link_to_add_association "Add Technologie", form, :technologies %>

            </p>
        </div>



        <div class="form-group">
          <%= form.submit "save portfolio Item", class: 'btn btn-success ' %>
          <%= link_to "Back", portfolios_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
      </p>
  </div>
</div>